doi = {10.1007/s40866-018-0044-y},
issn = {21994706},
journal = {Technology and Economics of Smart Grids and Sustainable Energy},
keywords = {Blockchain,Coalition formation,Microgrid},
number = {1},
publisher = {Springer Science and Business Media {LLC}},
title = {{Peer to Peer Energy Trade Among Microgrids Using Blockchain Based Distributed Coalition Formation Method}},
url = {https://doi.org/10.1007%2Fs40866-018-0044-y},
volume = {3},
year = {2018}
}
