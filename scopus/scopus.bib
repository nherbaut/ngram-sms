year = {2019}
}
@inproceedings{Matissi_2019,
abstract = {To achieve data security, Cloud Service Providers (CSPs) use cryptographic techniques to encrypt the data and disclose decryption keys to only authorized users. However, when data is shared amongst many users, the data management system should not only support access control, but also provide traceability of the different operations made on the sensitive data. Also data is duplicated to ensure the availability of the data. Unfortunately the amount of redundant copies of the same data leads to storage waste. In our paper we propose an architecture for data management based on Blockchain Principle to provide traceability of the updates on data while guaranteeing its security through a combination of hashing and encryption techniques. Our model will adapt the Blockchain technology to a centralized environment and supports a heterogeneous deduplication of redundant data in data centers. We evaluate the efficiency of the scheme on the basis of the time consumed for encryption and decryption of big or small data as well as the security level of the proposed model.},
