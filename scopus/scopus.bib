keywords = {Access control,Accountability,Decentralization,EHealth,Healthcare,Integrity,Intel SGX,Mobile platform,Permissioned blockchain,Privacy,Privacy protection,Scalability,Self-sovereignty,Trusted computing,Wearable devices},
number = {15},
