keywords = {Access right delegation,Internet of Things (IoT),blockchain network},
number = {4},
pages = {2630--2639},
publisher = {Institute of Electrical and Electronics Engineers ({IEEE})},
title = {{On the Integration of Blockchain to the Internet of Things for Enabling Access Right Delegation}},
