keywords = {Blockchain,Hierarchical Storage,Industrial IoT},
pages = {166--175},
publisher = {IEEE},
title = {{ChainSplitter: Towards blockchain-based industrial IoT architecture for supporting hierarchical storage}},
url = {https://doi.org/10.1109%2Fblockchain.2019.00030},
year = {2019}
}
