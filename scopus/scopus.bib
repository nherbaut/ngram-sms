journal = {Journal of Medical Systems},
keywords = {Blockchain,Data security sharing,Decentralization feature,Medical cyber physical systems,Security authentication},
month = {jan},
number = {2},
publisher = {Springer Science and Business Media {LLC}},
title = {{Design of a Secure Medical Data Sharing Scheme Based on Blockchain}},
