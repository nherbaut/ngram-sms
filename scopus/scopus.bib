journal = {International Journal of Systems Assurance Engineering and Management},
keywords = {Blockchain,Blockchain case study,Blockchain use cases,Government services,Hyperledger fabric},
publisher = {Springer Science and Business Media {LLC}},
title = {{Novel blockchain reference model for government services: Dubai government case study}},
