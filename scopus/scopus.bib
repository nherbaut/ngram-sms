month = {jan},
publisher = {IEEE},
title = {{Federated Blockchain-Based Tracking and Liability Attribution Framework for Employees and Cyber-Physical Objects in a Smart Workplace}},
url = {https://doi.org/10.1109%2Ficgs3.2019.8688297},
